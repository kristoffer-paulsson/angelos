from argparse import ArgumentParser
from angelos.meta.pkg.tmpl import render_rpm_spec

parser = ArgumentParser()
parser.add_argument(
    "-r",
    "--release",
    dest="release",
    type=int,
    default=None,
    help="Release number.",
    required=True
)


if __name__ == '__main__':
    print(render_rpm_spec(parser.parse_args().release))