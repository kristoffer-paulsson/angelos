Vagrant.configure("2") do |config|
  config.vm.box = "generic/centos8"
  config.vm.synced_folder "data", "/home/vagrant/data", type: "virtualbox"

  config.vm.network "forwarded_port", guest: 3, host: 2003
  config.vm.network "forwarded_port", guest: 4, host: 2004
  config.vm.network "forwarded_port", guest: 5, host: 2005

  config.vm.provision "shell", privileged: false, inline: <<-SHELL

    sudo dnf check-update
    sudo dnf upgrade -y
    sudo dnf install nano -y
    ssh-keygen -f ~/.ssh/id_rsa -P ""

  SHELL
end