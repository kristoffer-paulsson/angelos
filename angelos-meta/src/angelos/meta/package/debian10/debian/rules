#!/usr/bin/make -f

export DH_VIRTUALENV_INSTALL_ROOT=/opt/angelos/angelos
SNAKE=/usr/bin/python3.7
EXTRA_REQUIREMENTS=--upgrade-pip --preinstall "setuptools>=49.6.0" --preinstall "wheel"

PACKAGE=$(shell dh_listpackages)
VERSION=$(shell parsechangelog | grep ^Version: | sed -re 's/[^0-9]+([^-]+).*/\1/')
DH_VENV_ARGS=--with python-virtualenv --setuptools --install-suffix angelos \
             --python $(SNAKE) $(EXTRA_REQUIREMENTS) # -v


%:
	dh $@ $(DH_VENV_ARGS)

# override_dh_strip:
#	dh_strip --exclude=cffi --exclude=symsynd --exclude=selenium --exclude=PIL

# override_dh_shlibdeps:
#	dh_shlibdeps -X/x86/ -X/PIL/.libs/ -X/psycopg2/.libs